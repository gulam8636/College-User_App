<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.homeFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >

      <com.smarteist.autoimageslider.SliderView
    android:layout_width="match_parent"
    android:layout_height="250sp"
          app:sliderAnimationDuration="600"
          app:sliderAutoCycleDirection="right"
          app:sliderAutoCycleEnabled="true"
          app:sliderIndicatorAnimationDuration="600"
          app:sliderIndicatorGravity="center_horizontal|bottom"
          app:sliderIndicatorMargin="15sp"
          app:sliderIndicatorOrientation="horizontal"
          app:sliderIndicatorRadius="2sp"
          app:sliderIndicatorPadding="3sp"
          app:sliderStartAutoCycle="true"
          app:sliderIndicatorSelectedColor="#5A5A5A"
          app:sliderIndicatorUnselectedColor="#ffff"
          android:id="@+id/slider"
          />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="SVM PUBLIC SCHOOL ARWATAND"
               android:textStyle="bold"
               android:textSize="18sp"
               android:textColor="@color/textColor"
               android:layout_marginTop="20sp"
               android:layout_gravity="center_horizontal"
               />
       <TextView
          android:layout_width="wrap_content"
           android:layout_marginTop="10sp"
          android:layout_margin="10sp"
          android:layout_height="wrap_content"
           android:gravity="center_horizontal"
           android:text="@string/aboutSchool"
           />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="80sp"
               android:padding="10sp"
               android:layout_marginVertical="10sp"
               android:background="@color/textColor"
               android:gravity="center_horizontal"
               android:orientation="vertical"
               >
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:orientation="vertical"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Classes"
                       android:textStyle="bold"
                       android:textSize="18sp"
                       android:textColor="@color/white"
                       android:gravity="center"
                       />

               </LinearLayout>
               <LinearLayout
                   android:layout_width="200sp"
                   android:layout_marginTop="5sp"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="60sp"
                   android:layout_gravity="center_horizontal"
                   >
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center_horizontal"
                       android:background="@color/white"
                       android:textSize="15sp"
                       android:text="Nursery to Class 10th"
                       android:textColor="@color/textColor"
                       />
               </LinearLayout>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/white"
               android:orientation="vertical"
               android:layout_marginTop="5sp"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal"
                   android:background="@color/white"
                   android:textSize="20sp"
                   android:text="Contact Details"
                   android:textColor="@color/black"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:text="Email : pkshahu@gmail.com"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:text="Mobile : 7870569171"
                   />
           </LinearLayout>

               <ImageView
                   android:layout_width="330sp"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="20sp"
                   android:layout_height="200sp"
                   android:src="@drawable/map"
                   android:id="@+id/map"
                   />

       </LinearLayout>
   </ScrollView>

</FrameLayout>